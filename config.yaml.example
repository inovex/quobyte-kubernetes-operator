namespace: quobyte
registry:
    - node: host1
      bootstrap: true
    - node: host2
    - node: host3
metadata:
    - node: host1
    - node: host2
    - node: host3
data:
    # use all available nodes
    - node: all
client:
    # use all available nodes
    - node: all
version: '1.3.14'
kubernetes_files:
    path: './quobyte'
# example: '-o user_xattr'
mount_opts: ''
resources:
    registry:
        limits:
            memory: 2Gi
            cpu: 1
        requests:
            memory: 1Gi
            cpu: 500m
    metadata:
        limits:
            memory: 2Gi
            cpu: 1
        requests:
            memory: 1Gi
            cpu: 500m
    data:
        limits:
            memory: 2Gi
            cpu: 1
        requests:
            memory: 1Gi
            cpu: 500m
    client:
        limits:
            memory: 2Gi
            cpu: 1
        requests:
            memory: 1Gi
            cpu: 500m
    api:
        limits:
            memory: 1Gi
            cpu: 500m
        requests:
            memory: 500Mi
            cpu: 250m
