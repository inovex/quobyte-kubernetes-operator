apiVersion: v1
kind: ConfigMap
metadata:
  name: deployer-config
data:
  config.yaml: |-
    incluster: True
    namespace: quobyte
    version: '1.3.14'
    kubernetes_files: '/deployer/quobyte'
    registry:
        nodes:
            - host1
            - host2
            - host3
    metadata:
        nodes:
            - host1
            - host2
            - host3
    client:
        mount_opts: '' # example: '-o user_xattr'
    api:
        resources:
            limits:
                memory: 1Gi
                cpu: 500m
            requests:
                memory: 500Mi
                cpu: 250m
    default:
        nodes:
            - all
        resources:
            limits:
                memory: 2Gi
                cpu: 1
            requests:
                memory: 1Gi
                cpu: 500m
